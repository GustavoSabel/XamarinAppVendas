<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:AppVendas.MarkupExtensions;assembly=AppVendas"
             xmlns:local1="clr-namespace:AppVendas.Converters"
             mc:Ignorable="d"
             x:Class="AppVendas.Views.NovoPedidoPage">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <local1:IsNotEmptyConverter x:Key="IsNotEmpty" />
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout>

            <SearchBar Placeholder="Filtro" TextChanged="searchBar_TextChanged"/>

            <CollectionView ItemsSource="{Binding Produtos}" EmptyView="Nenhum produto encontrado">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="{StaticResource PaddingGrid}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.ColumnSpan="2" Text="{Binding Descricao}" FontSize="Medium" FontAttributes="Bold"/>
                            
                            <Image Grid.Column="0" Grid.Row="1" Source="sem_foto.png" WidthRequest="100" />


                            <StackLayout Grid.Row="1" Grid.Column="1" Orientation="Horizontal">

                                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                                    <Label Text="{Binding Unidade}"/>
                                    <Label Text="{Binding Valor, StringFormat='Valor: {0:c2}'}"/>
                                    <Label Text="{Binding ValorUnitario, StringFormat='Valor Unit.: {0:c2}'}"/>
                                    <Label Text="{Binding ValorTotal, Mode=OneWay, StringFormat='Total: {0:c2}'}" FontSize="Medium"/>
                                </StackLayout> 

                                <StackLayout Orientation="Vertical" WidthRequest="80">
                                    <Entry 
                                        Text="{Binding Quantidade, Mode=TwoWay}" 
                                        Keyboard="Numeric" 
                                        Unfocused="Entry_Unfocused"
                                        WidthRequest="50" />

                                    <StackLayout Orientation="Horizontal" HorizontalOptions="End">
                                        <ImageButton 
                                            Source="{local:ImageResource Source='AppVendas.Resources.minus_64.png'}" 
                                            Command="{Binding RemoverUmCommand}"
                                            WidthRequest="40"
                                            HeightRequest="30"
                                            IsVisible="{Binding Quantidade, Converter={StaticResource IsNotEmpty}}}"
                                            BackgroundColor="Transparent"/>
                                    
                                        <ImageButton 
                                            Source="{local:ImageResource Source='AppVendas.Resources.plus_64.png'}" 
                                            Command="{Binding AdicionarUmCommand}" 
                                            WidthRequest="40"
                                            HeightRequest="30"
                                            BackgroundColor="Transparent"
                                            />
                                    </StackLayout>

                                </StackLayout>

                            </StackLayout>

                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <StackLayout Orientation="Horizontal" HorizontalOptions="End" >
                <Label Text="{Binding ValorTotal, StringFormat='Valor total: {0:c2}'}" FontSize="Large" FontAttributes="Bold"  />
                <ImageButton 
                    Source="{local:ImageResource Source='AppVendas.Resources.shopping_cart_64.png'}"
                    WidthRequest="70"
                    HeightRequest="40"
                    BackgroundColor="Transparent"
                    />
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>